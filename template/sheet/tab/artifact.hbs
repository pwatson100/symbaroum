<div class="tab item" data-group="primary" data-tab="power">    
    <div class="artifact foreground border">        
        <h1>{{localize "ARTIFACT.TITLE"}}</h1>
        {{#each system.power  as |power key|}}
        <div class="power-n" data-power-id="{{key}}">
            <div class="power-header">                
                <div class="heading"><h2>{{localize "TITLE.POWER"}} {{addOne key}} </h2></div>
                {{#if @first}} {{else}}
                <div class="button">
                    <a class="power-control power-delete" data-tooltip="{{localize "ARTIFACT.POWER_DELETEBUTTON"}}"><i class="fas fa-trash"></i></a>
                </div> 
                {{/if}}
            </div>
            <div class="name">
                <label for="{{../id}}-system.power.{{key}}.name">{{localize "ARTIFACT.NAME"}}</label>
                <input name="system.power.{{key}}.name" id="{{../id}}-system.power.{{key}}.name" type="text" value="{{power.name}}" />
            </div>
            <div class="action">
                <label for="{{../id}}-system.power.{{key}}.action">{{localize "ARTIFACT.ACTION"}}</label>
                <select id="{{../id}}-system.power.{{key}}.action" name="system.power.{{key}}.action">
                    {{selectOptions ../action_types selected=power.action labelAttr="label"}}
                </select>
            </div>
            <div class="corruption">
                <label for="{{../id}}-system.power.{{key}}.corruption">{{localize "ARTIFACT.CORRUPTION"}}</label>
                <input name="system.power.{{key}}.corruption" type="text" id="{{../id}}-system.power.{{key}}.corruption" value="{{power.corruption}}" />
            </div>
            {{editor this.description target=(keyIndex key) button=true owner=owner editable=true}}
        </div>
        {{/each}}
        <div class="power-add">
            <div class="button"></div>
            <div><a class="power-control power-create" data-tooltip="{{localize "ARTIFACT.POWER_ADDBUTTON"}}" data-type="power"><label>{{localize "ARTIFACT.POWER_ADDBUTTON"}}</label><i class="fas fa-plus"></i></a></div>
        </div>
    </div>
</div>
